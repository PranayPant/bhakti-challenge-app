{
  "name": "bhakti-challenge-app",
  "main": "expo-router/entry",
  "version": "1.0.9",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "seed-local": "node ./scripts/seed/index.js",
    "seed-remote": "pnpm dotenvx run -- node ./scripts/cdn/sanityio.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "lint": "expo lint"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "./jestSetupFile.ts"
    ],
    "collectCoverageFrom": [
      "stores/**/*.{ts,tsx}",
      "!stores/**/*.spec.{ts,tsx}",
      "!stores/**/*.test.{ts,tsx}"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "stores/**/*.{ts,tsx}": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.48.3",
    "@expo/vector-icons": "^14.1.0",
    "@indic-transliteration/sanscript": "^1.3.1",
    "@logrocket/react-native": "^1.56.1",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-vector-icons/material-design-icons": "^12.0.0",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/native": "^7.1.6",
    "clsx": "^2.1.1",
    "expo": "~53.0.22",
    "expo-av": "~15.1.7",
    "expo-blur": "~14.1.5",
    "expo-build-properties": "~0.14.8",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-linking": "~7.1.7",
    "expo-router": "~5.1.5",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.11",
    "expo-updates": "~0.28.17",
    "expo-web-browser": "~14.2.0",
    "nativewind": "^4.1.23",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~3.17.5",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-toast-message": "^2.3.3",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "rn-tourguide": "^3.3.2",
    "tailwindcss": "3.4.17",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@sanity/client": "^7.8.1",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.0.14",
    "eslint": "~9.29.0",
    "eslint-config-expo": "~9.2.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.10",
    "lightningcss": "^1.30.1",
    "prettier": "^3.6.1",
    "typescript": "^5.8.3"
  },
  "private": true,
  "packageManager": "pnpm@9.6.0"
}
